<fieldset>
  <%= form.label :policy_content_ids, "Policies" %>
  <%= form.select :policy_content_ids,
                  taggable_policy_content_ids_container,
                  { include_blank: true },
                  multiple: true,
                  class: 'chzn-select',
                  data: { placeholder: "Choose policies..."} %>
  <% if form.object.respond_to?(:important) %>
    <div id="important">
      <%= form.check_box :important, label_text: "Is this an important document?" %>
    </div>
  <% end %>
  <br/>
</fieldset>
